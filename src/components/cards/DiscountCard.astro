---
interface Props {
  imageSrc: string; // Propiedad requerida para la URL de la imagen
  altText?: string; // Propiedad opcional para el texto alternativo de la imagen
  title: string; // Propiedad opcional para el título
  badge: string; // Propiedad opcional para la descripción
  discount: number;
  class?: string; // Nueva propiedad opcional para clases personalizadas
}

const { imageSrc, altText = "Food image", title, badge, discount, class: customClass = "" } = Astro.props as Props;
---

<div class={` max-w-[260px] flex flex-col gap-4 transition-transform duration-200 hover:scale-105 cursor-pointer ${customClass}`}>
  <div class="relative rounded-2xl overflow-hidden shadow-lg">
    <img src={imageSrc} alt={altText} />
    <div class="flex absolute justify-start bottom-0 left-0 bg-[#FFB30E] text-white px-5 py-2 text-5xl font-extrabold rounded-tr-3xl">
      {discount}
      <div class="flex flex-col items-center">
        <div class="font-bold text-2xl">%</div>
        <p class="text-discount">off</p>
      </div>
    </div>
  </div>
  <div>
    <div class="font-bold text-lg text-gray-700 pb-3">{title}</div>
    <div class="inline-block bg-[#F17228]/20 text-[#F17228] font-bold px-3 py-1 rounded-md">
      {badge}
    </div>
  </div>
</div>

<style>
  .text-discount {
    font-weight: 300;
    font-size: 17px;
    line-height: 10px;
  }
</style>
