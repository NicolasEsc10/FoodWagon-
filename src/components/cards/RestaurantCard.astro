---
import { Image } from 'astro:assets';

interface Props {
  imageSrc: string; // Propiedad requerida para la URL de la imagen
  imageRes: string;
  altText?: string; // Propiedad opcional para el texto alternativo de la imagen
  title: string; // Propiedad opcional para el título
  badge: string; // Propiedad opcional para la descripción
  discount: number;
  stars: number;
}

const { imageSrc, imageRes, stars, altText = "Food image", title, badge, discount } = Astro.props as Props;
---

<div class="flex flex-col gap-4 transition-transform duration-200 cursor-pointer min-w-[255px]">
    <div class="relative rounded-2xl overflow-hidden shadow-lg">
        <img src={imageSrc} alt={altText} class="w-full"/>
        <div class="flex absolute top-3 left-4 gap-2">
            <div class="flex items-center justify-center bg-[#F17228] text-white px-3 py-1 text-md font-semibold rounded-md">
                <img src="../../../public/images/icons/discount-icon.svg" alt="" loading="lazy" class="size-3 mr-1">
                {discount}
                <div class="">% off</div>
            </div>
            <div class="flex items-center justify-center bg-[#FFB30E] text-white px-3 py-1 text-md font-semibold rounded-md">
                <img src="../../../public/images/icons/fast-icon.svg" alt="" loading="lazy" class="size-3 mr-2">
                <p>Fast</p>
            </div>
        </div>
    </div>
    <div>
        <div class="flex items-center pb-5 gap-4">
            <div>
                <Image src={imageRes} alt={altText} width={49} height={49} />
            </div>
            <div class="flex flex-col">
                <p class="font-bold text-lg text-gray-700">{title}</p>
                <div class="flex items-center gap-1">
                    <img src="/images/icons/star-icon.svg" alt="star" loading="lazy" class="size-4" />
                    <p class="text-base font-normal text-[#FFB30E] hover:text-[#ff820e]">{stars}</p>
                </div>
            </div>
        </div>
        <p class="inline-block bg-[#79B93C]/20 text-[#79B93C] font-bold px-3 py-1 rounded-lg">
          {badge}
        </p>
    </div>
</div>
