---
import { Image } from "astro:assets";
import delivery from "../../../assets/icons/delivery-icon.svg";
import tracing from "../../../assets/icons/tracing-icon.svg";
import discount from "../../../assets/icons/discount-icon.svg";
---

<section class="bg-[#FEEFD0] w-full py-20 flex items-center justify-center ">
    <div class="bg-white flex items-center justify-center p-10 rounded-2xl gap-10 shadow-2xl shadow-[#FFAE00]/40">
        <div class="flex items-center justify-center gap-5">
            <div class="">
                <Image src={discount} alt="discount" width="100" height="100" />
            </div>
            <p class="text-2xl font-extrabold bg-gradient-to-r from-[#FB3C00] to-[#FFB800] bg-clip-text text-transparent">Daily<br>Discounts</p>
        </div>
        <div class="bg-gray-700/20 h-20 w-0.5 rounded-full"></div>
        <div class="flex items-center justify-center gap-5">
            <div class="">
                <Image src={tracing} alt="tracing" width="100" height="100" />
            </div>
            <p class="text-2xl font-extrabold bg-gradient-to-r from-[#FB3C00] to-[#FFB800] bg-clip-text text-transparent">Live<br>Tracing</p>
        </div>
        <div class="bg-gray-700/20 h-20 w-0.5 rounded-full"></div>
        <div class="flex items-center justify-center gap-5">
            <div class="">
                <Image src={delivery} alt="delivery" width="100" height="100" />
            </div>
            <p class="text-2xl font-extrabold bg-gradient-to-r from-[#FB3C00] to-[#FFB800] bg-clip-text text-transparent">Quick<br>Delivery</p>
        </div>
    </div>
<section/>
